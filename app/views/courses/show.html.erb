<p id="notice"><%= notice %></p>

<% if @course %>
<p>
  <strong>Class name:</strong>
  <%= @course.class_name %>
</p>

<p>
  <strong>Details:</strong>
  <%= @course.details %>
</p>

<p>
  <strong>Teacher name:</strong>
  <%= @course.teacher_name %>
</p>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Go to Dashboard', '/dashboard' %>

<% else %>

<p class="notfound">The requested course could not be found!</p>

<% end %>
